<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.ocps">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".voterReg"
            android:label="Registration"
            android:theme="@style/AppTheme" />

        <activity android:name=".login"
            android:label="login"
            android:theme="@style/AppTheme" />

        <activity android:name=".candReg"
            android:label="CandidateReg"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity android:name=".voterLogin"
            android:label="voter_login"
            android:theme="@style/AppTheme" />


        <activity android:name=".grievances"
            android:label="grievances"
            android:theme="@style/AppTheme" />

        <activity android:name=".vote_now"
            android:label="Vote_Now"
            android:theme="@style/AppTheme" />
        <activity android:name=".view_candidate_profile"
            android:label="View Profile"
            android:theme="@style/AppTheme" />

        <activity android:name=".list_of_candidates_to_view_profile"
            android:label="View Profile"
            android:theme="@style/AppTheme" />

        <activity android:name=".election_result"
            android:label="View Profile"
            android:theme="@style/AppTheme" />
        <activity android:name=".custom_result"
            android:label="View Profile"
            android:theme="@style/AppTheme" />

    </application>

</manifest>